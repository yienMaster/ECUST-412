#ifndef __EEPROM_H__
#define __EEPROM_H__

#include "zf_common_headfile.h"

//存储位置编号
typedef enum
{
    motor_l_p, motor_l_i, motor_l_d,
    motor_r_p, motor_r_i, motor_r_d,
    dir_p, dir_i, dir_d,dir_kp2,dir_gkd,
    para_error_k,para_dynamic_p_coef,para_dynamic_frontsight,para_round_p_decrease,para_round_size,para_frontsight,
    para_num
}parameter;


#define FLASH_SECTION_INDEX       (0)                                 // 存储数据用的扇区
#define FLASH_PAGE_INDEX          (10)                                // 存储数据用的页码 倒数第一个页码


void EEPROM_Update_All_Para(void);                      //更新所有参数的值
float EEPROM_Read_Data(parameter para);                 //读数据
void EEPROM_Write_Data(parameter para, float data);     //写数据
void EEPROM_Write_Data_uint16(parameter para, uint16 data);

#endif
